<%= render 'shared/admin_header', title: "Upload Photo" %>
<div id='content'>
  <%= render 'shared/errors', container: @photo %>
  
  <%= form_for @photo, url: admin_photos_path do |f| %>
    <%= f.hidden_field :admin_uploaded, value: true %>
    <p>
      <%= f.label :image %>
      <%= f.file_field :image %>
    </p>
    <p>
      <%= f.label 'Caption' %>
      <%= f.text_area :caption_text %>
    </p>
    <p>
      <%= f.label 'Team' %>
      <%= f.collection_select :team_id, Team.pc, :id, :name %>
    </p>
    <p>
      <%= f.submit 'Upload' %>
    </p>
  <% end %>
  
  <div id='foot_links'>
    <p><%= link_to 'Cancel', photos_path %></p>
  </div>
</div>
