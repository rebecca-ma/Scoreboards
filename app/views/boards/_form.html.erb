<%= render 'shared/errors', container: @board %>

<%= form_for @board do |f| %>
  <p>
    <%= f.label 'Title' %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label 'Description' %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label 'Visible' %>
    <%= f.check_box :visible %>
  </p>
  <p>
    <%= f.submit submit_msg %>
  </p>
<% end %>
