<%= render 'shared/errors', container: @score %>

<%= form_for @score, url: url do |f| %>
  <%= f.hidden_field :board_id, value: @board.id %>
  <p>
    <%= f.label 'Team' %>
    <%= f.collection_select :team_id, Team.all, :id, :name %>
  </p>
  <p>
    <%= f.label 'Score (Integer)' %>
    <%= f.number_field :score %>
  </p>
  <p>
    <%= f.submit submit_msg %>
  </p>
<% end %>
